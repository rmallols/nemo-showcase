        "value": "Miss value"
      },
      {
        "text": "Dr",
        "value": "Dr value"
      },
      {
        "text": "Re",
        "value": "Rev value"
      },
      {
        "text": "Prof",
        "value": "Prof value"
      },
      {
        "text": "Other",
        "value": "Other value"
      }
    ],
    "value": "",
    "properties": {
      "validation": [
        {
          "type": "required",
          "rules": [
            {
              "value": true,
              "id": "title.blank",
              "message": "Please enter your title"
            }
          ]
        },
        {
          "type": "inList",
          "rules": [
            {
              "value": [
                "Mr value",
                "Mrs value",
                "Ms value",
                "Miss value",
                "Dr value",
                "Rev value",
                "Prof value",
                "Other value"
              ],
              "id": "title.invalid",
              "message": "Title was not a valid choice"
